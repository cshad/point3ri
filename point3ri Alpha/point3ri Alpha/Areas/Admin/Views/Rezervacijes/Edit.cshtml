                <div class="checkbox">
                    @Html.EditorFor(model => model.RezervacijaAktivna)
                    @Html.ValidationMessageFor(model => model.RezervacijaAktivna, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Spremi" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>

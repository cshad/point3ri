@model IEnumerable<point3ri_Alpha_0._51.Models.Oprema>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- begin:header -->
<section id="header" style="background-image: url(/Content/Tema/img/admin.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <blockquote>
                    <p>Admin page</p>
                </blockquote>
            </div>
        </div>
    </div>
    <div class="overlay"></div>
</section>
<!-- end:header -->

<p>
    @Html.ActionLink("Dodaj opremu", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Naziv kategorije")
        </th>
        <th>
            @Html.DisplayName("Prostorija")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayName("Inventarski broj")
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KategorijaOpreme.NazivKategorije)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prostorija.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InventarskiBroj)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Izbriši", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>

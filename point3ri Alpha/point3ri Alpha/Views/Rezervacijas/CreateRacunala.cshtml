@model point3ri_Alpha_0._51.Models.Rezervacija

@{
    ViewBag.Title = "CreateRacunala";
}

<!-- begin:header -->
<section id="header" style="background-image: url(/Content/Tema/img/IMG_0937.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <blockquote>
                    <p>Rezervacije</p>
                </blockquote>
            </div>
        </div>
    </div>
    <div class="overlay"></div>
</section>
<!-- end:header -->


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Rezervacija termina za računala</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

@model point3ri_Alpha_0._51.Models.ViewModel.OpremaViewModel

@{
    ViewBag.Title = "CreateRacunala";
    Layout = null;
}

@Html.DropDownList("OpremaID", Model.OpremaIEnum, "", htmlAttributes: new { @id = "Oprema-DropdownID", @class = "form-control" })

<script type="text/javascript">
    $(function () {
        // Popuni DanTermine
        $('#Oprema-DropdownID').change(function () {
            var selectedDatumRezervacije = $("#Datum-DropdownID option:selected").val();
            var selectedOpremaID = this.value;
            $('#DanTerminiContainer').load('@Url.Action("DanTerminView")?DatumRezervacijeID=' + selectedDatumRezervacije + '&OpremaID=' + selectedOpremaID);
            $('#TrajanjeContainer').load('@Url.Action("TrajanjeView")');
        });
    });
</script>
@model point3ri_Alpha_0._51.Models.ViewModel.DatumiViewModel

@{
    ViewBag.Title = "CreateRacunala";
    Layout = null;
}

@Html.DropDownList("DatumRezervacijeID", Model.DatumiRezervacijeIEnum, null, htmlAttributes: new { @id = "Datum-DropdownID", @class = "form-control" })


<script type="text/javascript">
            $(function () {
                $('#Datum-DropdownID').change(function () {
                    $('#ProstorijaContainer').load('@Url.Action("ProstorijaView")');
                    $('#OpremaContainer').load('@Url.Action("OpremaView")');
                    $('#DanTerminiContainer').load('@Url.Action("DanTerminView")');
                    $('#TrajanjeContainer').load('@Url.Action("TrajanjeView")');
                });
            });
</script>
